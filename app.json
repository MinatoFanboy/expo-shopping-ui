{
    "expo": {
        "name": "expo-shopping-ui",
        "slug": "expo-shopping-ui",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "myapp",
        "ios": {
            "splash": {
                "backgroundColor": "#FFFFFF",
                "dark": {
                    "backgroundColor": "#0F1414",
                    "image": "./assets/images/splash-dark.png",
                    "resizeMode": "contain"
                },
                "image": "./assets/images/splash-light.png",
                "resizeMode": "contain"
            },
            "userInterfaceStyle": "automatic"
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "splash": {
                "backgroundColor": "#FFFFFF",
                "dark": {
                    "backgroundColor": "#0F1414",
                    "image": "./assets/images/splash-dark.png",
                    "resizeMode": "contain"
                },
                "image": "./assets/images/splash-light.png",
                "resizeMode": "contain"
            }
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": ["expo-router"],
        "experiments": {
            "typedRoutes": true
        }
    }
}
